        "import numpy as np\n",
        "\n",
        "L = int(input(\"Enter domain size for length (m)\"))\n",
        "T = int(input(\"Enter domain size for time (s) \")) #inputs for space and time\n",
        "Nx = 0\n",
        "Nt = 0\n",
        "dx = 0\n",
        "dt = 0\n",
        "\n",
        "# Create full grid arrays\n",
        "x = np.linspace(0, L, Nx)  # Spatial grid\n",
        "t = np.linspace(0, T, Nt)  # Time grid\n",
        "theta = np.zeros((Nt, Nx))  # 2D array for concentrations\n",
        "\n",
        "# Set initial condition\n",
        "# Example: pollutant only at source\n",
        "theta[0, 0] = 250  # µg/m³ at x=0\n",
        "\n",
        "# Or from your data table\n",
        "# theta[0, :] = np.interp(x, data_x, data_theta)\n",
        "\n",
        "# Apply backward difference method\n",
        "alpha = 1.0 / dt\n",
        "beta = U / dx\n",
        "\n",
        "for n in range(1, Nt):\n",
        "    for i in range(1, Nx):\n",
        "        theta[n, i] = (alpha * theta[n-1, i] + beta * theta[n, i-1]) / (alpha + beta)\n",
        "    theta[n, 0] = theta[0, 0]  # Boundary condition at source"
      ]
